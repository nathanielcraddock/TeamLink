@model IEnumerable<GameLink.Player>

@{
    ViewBag.Title = "Results";
    Layout = "~/Views/Players/_LayoutPage.cshtml";
}

<h2>Results</h2>

<p>
    @Html.ActionLink("Search Again", "Search")
</p>
<p>
    Send an invite to any player you choose below!
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Game
        </th>
        <th>
            Style
        </th>
        <th>
            Platform
        </th>
        <th>
            Region
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            ********
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Game.GameName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GamerStyle.GamerStyle1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Platform.PlatformName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Region.Region1)
        </td>
        <td>
            @Html.ActionLink("Select", "Delete", new { id = item.PlayerId })
        </td>
    </tr>
}

</table>
